# Linux Audit Tool Configuration
#
# Copy this file to audit.conf and customize as needed
# This file contains default configuration values.
# Override by setting environment variables or editing scripts directly.

# Remote server connection settings
DEFAULT_PORT="22"
DEFAULT_USER="admin"

# Email notification settings
DEFAULT_EMAIL="admin@example.com"
EMAIL_ENABLED="true"

# Audit settings
LOG_RETENTION_DAYS="30"
MAX_LOG_FILES="50"

# Security thresholds
MAX_FAILED_LOGINS="10"
MAX_LOAD_AVERAGE="2.0"
MIN_DISK_FREE_PERCENT="10"

# Audit scope - set to "false" to skip sections
AUDIT_SYSTEM_INFO="true"
AUDIT_PROCESSES="true"
AUDIT_NETWORK="true"
AUDIT_USERS="true"
AUDIT_SERVICES="true"
AUDIT_UPDATES="true"
AUDIT_SSH_CONFIG="true"
AUDIT_CRON_JOBS="true"
AUDIT_LOGS="true"
AUDIT_FILE_PERMS="true"